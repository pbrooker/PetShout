<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codeitonce.petshout.CreateLostPetPostFragment"
             style="@style/Layouts"
>

    <ImageView
        style="@style/HeaderImage"
        android:id="@+id/cat_dog_profile"
    />

    <ScrollView
        style="@style/ScrollViewStyle"
        android:id="@+id/scroll_view"
    >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            android:shrinkColumns="0,1"
        >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/PageTitle"
                    android:text="@string/create_lost_pet_post_header"
                />

            </TableRow>

            <TableRow android:layout_marginTop="8dp"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginBottom="8dp"
            >

                <TextView
                    style="@style/FormTitleText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Select Pet Profile"
                    android:layout_weight="1"
                />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/pet_profile_spinner"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp"
            >

                <Button
                    style="@style/ActionButton"
                    android:text="@string/submit_button"
                    android:id="@+id/submit_button"
                    android:layout_gravity="center"
                    android:layout_span="2"
                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_disclaimer"
                    android:id="@+id/text_view"
                    android:layout_span="2"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                />

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>
