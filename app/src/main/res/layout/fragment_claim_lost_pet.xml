<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codeitonce.petshout.ClaimLostPetFragment"
             android:background="#21190e">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/claim_lost_pet_header"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:paddingLeft="6dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_column="0"
                android:layout_span="2"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cat_dog_profile"
                android:src="@drawable/catanddog"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:contentDescription="@string/cat_and_dog_profile"
                android:padding="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textColor="#ffffff"
                android:background="#5a4e3f"
                android:hint="@string/pet_description"
                android:id="@+id/pet_description"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/pet_found_in"
                android:textColor="#ffffff"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/region_area"
                android:textColor="#ffffff"
                android:id="@+id/area"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_information_person_found_pet"
                android:id="@+id/contact_information"
                android:textColor="#ffffff"
                android:layout_span="2"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/ActionButton"
                android:text="@string/this_is_my_pet_button"
                android:id="@+id/claim_lost_pet"
                android:textColor="#21190e"
                android:background="#e89e1a"
                android:layout_gravity="center"
                android:layout_span="2"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>
