                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/ear_tattoo_paragraph"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/microchip"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/microchip_paragraph"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/animals_with_no_id"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/animals_with_no_id_paragraph"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contact_vet"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="10dp"
                    android:paddingLeft="6dp"
