<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codeitonce.petshout.EditPetProfileFragment"
                style="@style/Layouts"
    >

    <ImageView
        style="@style/HeaderImage"
        android:id="@+id/cat_dog_profile"
        android:clickable="true"

        />


    <ScrollView
        style="@style/ScrollViewStyle"
        android:id="@+id/scroll_view"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    style="@style/PageTitle"
                    android:text="@string/pet_profile_header"

                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/name"
                    android:textColor="#ffffff"
                    />
                <EditText
                    style="@style/EditTextFields"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:hint="@string/name"
                    android:id="@+id/pet_name"
                    />


            </TableRow>


            <TableRow android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/select_species_title"
                    android:textColor="#ffffff"
                    />


                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/species_spinner"
                    android:paddingLeft="5dp"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Breed"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/EditTextFields"
                    android:hint="@string/breed_title"
                    android:id="@+id/breed_input"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gender"
                    android:textColor="#ffffff"
                    />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/gender_group"
                    android:orientation="horizontal"
                    android:textColor="#ffffff"
                    android:paddingLeft="5dp"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/male_radio"
                        android:buttonTint="#e89e1a"
                        android:textColor="#ffffff"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/female_radio"
                        android:buttonTint="#e89e1a"
                        android:textColor="#ffffff"
                        />

                </RadioGroup>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/age_header"
                    android:textColor="#ffffff"
                    />

                <EditText
                    style="@style/EditTextFields"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/age_header"
                    android:id="@+id/age_input"
                    android:inputType="number"/>

            </TableRow>

            <TableRow android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/spayed_neutered"
                    android:textColor="#ffffff"
                    />

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spayedNeuteredCheckBox"
                    android:textColor="#ffffff"
                    android:buttonTint="@color/colorAccent"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/description_coloring"
                    android:textColor="#ffffff"
                    />

                <EditText
                    style="@style/EditTextFields"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:hint="@string/description_coloring"
                    android:id="@+id/descipriptionColoring"
                    android:paddingLeft="5dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/additional_information"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:hint="@string/additional_information"
                    android:textColor="#ffffff"
                    android:background="#5a4e3f"
                    android:id="@+id/additional_information"
                    android:paddingLeft="5dp"
                    />

            </TableRow>

            <TableRow android:gravity="center"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                >

                <Button
                    style="@style/ActionButton"
                    android:text="@string/image_button_text"
                    android:id="@+id/image_button"
                    android:layout_gravity="center_horizontal"
                    android:layout_span="2"
                    />

            </TableRow>

            <TableRow android:gravity="center_horizontal"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_span="2"
                    android:layout_column="0"
                    >

                    <Button
                        style="@style/ActionButton"
                        android:text="@string/submit_button"
                        android:id="@+id/submit_button"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>