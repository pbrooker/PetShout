<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.codeitonce.petshout.BrowsePetsFragment"
             android:background="#22190e">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/browse_lost_and_found_pets_header"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/registeredPetsSpinner"
                    android:layout_weight="0"
                    android:layout_column="0"
                    >

                </Spinner>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="#5a4e3f"
                    android:textColor="#ffffff"
                    android:text="@string/city_input"
                    android:id="@+id/cityInput"
                    android:layout_column="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/speciesSpinner"
                    android:layout_column="0"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_radio_title"
                    android:id="@+id/genderRadioButton"
                    android:layout_column="1"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#5a4e3f"
                    android:textColor="#ffffff"
                    android:text="@string/keywords_input"
                    android:id="@+id/keywordInput"
                    android:inputType="textMultiLine"
                    android:layout_span="2"
                    android:ems="10"/>
            </TableRow>

            <TableRow>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:gravity="center"
                    android:paddingTop="16dp">

                <Button
                    style="@style/ActionButton"
                    android:text="@string/search_button"
                    android:id="@+id/searchButton"
                    android:textColor="#21190e"
                    android:background="#e89e1a"
                    />
                </LinearLayout>

            </TableRow>
            <TableRow>


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/petImage"
                    android:src="@drawable/catanddog"
                    android:background="#00ffffff"
                    android:layout_column="0"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/petDescription"
                    android:layout_column="1"/>
            </TableRow>


        </TableLayout>

    </ScrollView>







</RelativeLayout>
